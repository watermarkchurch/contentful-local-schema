{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["@types/*"] },
    "declaration": true,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": [
      "es2015",
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}