{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["@types/*"] },
    "declaration": true,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es2015",
      "dom",
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}